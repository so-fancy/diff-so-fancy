#!/usr/bin/env bash

[[ $# -ge 1 ]] && [[ -f "$1" ]] && input="$1" || input="-"
[[ $# -ge 1 ]] && less_opts="${*:1}" || less_opts=

get_script_dir () {
  src="${BASH_SOURCE[0]}"

  while [[ -h "$src" ]]; do
    dir="$(cd -P "$( dirname "$src" )" && pwd)"
    src="$(readlink "$src")"
    [[ $src != /* ]] && src="$dir/$src"
  done

  dir="$(cd -P "$( dirname "$src" )" && pwd)"
  echo "$dir"
}

# find my diff-highlight
if hash diff-highlight 2> /dev/null; then
  diff_highlight=diff-highlight
else
  diff_highlight="$(get_script_dir)/third_party/diff-highlight/diff-highlight"
fi

print_header_clean () {
  "$(get_script_dir)/lib/diff-so-fancy.pl"
}

FD_is_pipe=$(perl -e 'exit(-p STDOUT ? 0 : 1);')
FD_is_terminal=$(test -t 1)
if $FD_is_terminal || $FD_is_pipe; then
    # run it.
    # shellcheck disable=SC2002
    cat $input | $diff_highlight | print_header_clean | less -R $less_opts
else
    # stdout is not going to a terminal or pipe; probably a patch file
    cat $input
fi
